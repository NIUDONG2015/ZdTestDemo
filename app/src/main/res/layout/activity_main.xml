<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.itheima.zdtestdemo.MainActivity">

    <Button
        android:id="@+id/dialog_bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:text="确认对话框" />

    <Button
        android:id="@+id/dialog_bt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:text="单选按钮对话框" />

    <Button
        android:id="@+id/dialog_bt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:text="多选按钮对话框" />

    <Button
        android:id="@+id/dialog_bt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:text="列表对话框" />

    <Button
        android:id="@+id/dialog_bt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:text="自定义对话框" />

    <Button
        android:id="@+id/dialog_bt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:text="进度条" />

    <Button
        android:id="@+id/dialog_bt7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:text="多选删除" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Hello，11月"
        android:textColor="#f00"
        android:textSize="20dp" />

</LinearLayout>